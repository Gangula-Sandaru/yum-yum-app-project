<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardView"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_1"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
      >

        <ImageView
            android:id="@+id/list_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:src="@drawable/propic" />

        <TextView
            android:id="@+id/listTile"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@id/list_pic"
            android:text="Pecipt Name"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/description_list"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/listTile"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/list_pic"
            android:text="Description"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/op_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/list_pic"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-348dp"
            android:layout_marginBottom="28dp"
            android:background="@color/transparent"
            android:src="@drawable/dot"
            app:tint="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
